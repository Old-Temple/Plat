<?xml version="1.0" encoding="utf-8"?>
<!--
아바타 옷 변경 Dialog
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogChangeCloth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/character_bundle"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/head"
                    android:layout_width="120dp"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/shose"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="120dp" />

                <Button
                    android:id="@+id/body"
                    android:layout_width="120dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="40dp" />

                <Button
                    android:id="@+id/head_xbox"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    android:layout_marginLeft="125dp"
                    android:background="#FF0000"
                    android:text="x" />

                <Button
                    android:id="@+id/body_xbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="60dp"
                    android:background="#FF0000"
                    android:visibility="invisible"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="x" />

                <Button
                    android:id="@+id/shose_xbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="140dp"
                    android:background="#FF0000"
                    android:visibility="invisible"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="x" />


            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="vertical"
                android:background="@drawable/edge">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnWarehouseAvatar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:text="아바타"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/warehouseChildFragment3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_weight="9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="100dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btnwarehouseClose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="닫기"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>